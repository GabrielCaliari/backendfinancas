# Obrigatório: chave para assinatura dos JWTs (mín. 16 caracteres)
JWT_SECRET=sua_chave_secreta_aqui_min_16_chars

# Banco de dados (já usado pelo Prisma)
DATABASE_URL="postgresql://user:password@localhost:5432/dbname"

